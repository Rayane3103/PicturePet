modules = ["cpp-clang14", "dart-3.8", "nodejs-20", "swift-5.8"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["flutter", "git", "unzip", "xz", "which", "cacert", "android-tools"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "flutter-web"

[[workflows.workflow]]
name = "flutter-web"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flutter run -d web-server --release --web-hostname 0.0.0.0 --web-port 5000 --dart-define=SUPABASE_URL=$SUPABASE_URL --dart-define=SUPABASE_ANON_KEY=$SUPABASE_ANON_KEY --dart-define=SESSION_SECRET=$SESSION_SECRET --dart-define=FAL_API_KEY=$FAL_API_KEY"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 34793
externalPort = 3000

[[ports]]
localPort = 42851
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["python", "-m", "http.server", "5000", "--directory", "build/web"]
build = ["flutter", "build", "web", "--release", "--dart-define=SUPABASE_URL=$SUPABASE_URL", "--dart-define=SUPABASE_ANON_KEY=$SUPABASE_ANON_KEY", "--dart-define=SESSION_SECRET=$SESSION_SECRET"]
